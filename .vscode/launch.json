{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Server",
      "runtimeExecutable": "npm",
      "runtimeArgs": ["run", "debug"],
      "skipFiles": ["<node_internals>/**"],
      "console": "integratedTerminal"
    },
    // atache debugger to the running server on 9229
    {
      "type": "node",
      "request": "attach",
      "name": "Attach to Server",
      "port": 9229,
      "address": "localhost"
    }
  ]
}
